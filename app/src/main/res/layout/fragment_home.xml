<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#731DF8"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#731DF8"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="336dp"
                    android:layout_height="60dp"
                    android:background="#731DF8"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|left"
                        android:text="Home"
                        android:textColor="#FFFFFF"
                        android:textSize="22.5dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center">

                    <Button
                        android:id="@+id/config_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/setting_white"
                        android:onClick="configButton"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:outlineProvider="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/outline"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:orientation="vertical"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/puzzle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:shadowColor="#FFFFFF"
                                android:text="   내 신용등급"
                                android:textColor="#9E9292"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="  퍼즐 하나,"
                                android:textColor="#000000"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="560dp"
                    android:background="@drawable/main_radius"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="17.5dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/timer" />

                        <LinearLayout
                            android:layout_width="325dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingRight="22sp"
                                android:text="미션 완료까지"
                                android:textColor="#000000"
                                android:textSize="22sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/timer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="-일 -시간 21분 59초"
                                    android:textColor="#E10707"
                                    android:textSize="21sp" />

                                <TextView
                                    android:id="@+id/textView25"
                                    android:layout_width="138dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text=" 남았습니다!"
                                    android:textColor="#000000"
                                    android:textSize="22sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#F1F1EF"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/promise_mission"
                            android:layout_width="350dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_mission"
                            android:gravity="center_vertical"
                            android:onClick="mOnPopupClick"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/check"
                                app:tint="#FF7347" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="이번 주 약속 하나를 달성하세요!"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#F1F1EF"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/wakeup_mission"
                            android:layout_width="350dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_mission"
                            android:gravity="center_vertical"
                            android:onClick="mOnPopupClick2"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/check"
                                app:tint="#FF7347" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="이번 주 최고 성실맨이 되어라!"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#F1F1EF"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/money_mission"
                            android:layout_width="350dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_mission"
                            android:gravity="center_vertical"
                            android:onClick="mOnPopupClick3"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/check"
                                app:tint="#FF7347" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="이번 주 짠돌이 되기 챌린지!"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#F1F1EF"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_mission"
                            android:gravity="center_vertical"
                            android:onClick="mOnPopupClick4"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/check"
                                app:tint="#FF7347" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="이번 주 인싸가 되어보자!"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#F1F1EF"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_mission"
                            android:gravity="center_vertical"
                            android:onClick="mOnPopupClick5"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/check"
                                app:tint="#FF7347" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="이번 주 운동왕이 되어보자!"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:background="#F1F1EF"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="240dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/shadow"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="30dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="나에게"
                                android:textColor="#000000"
                                android:textSize="20sp"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="딱!"
                                    android:textColor="#000000"
                                    android:textSize="35sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="맞는"
                                    android:textColor="#000000"
                                    android:textSize="20sp"></TextView>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="금융상품 찾기"
                                android:textColor="#000000"
                                android:textSize="20sp"></TextView>

                            <Button
                                android:layout_width="70dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/radius4"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:onClick="recommendButton"
                                android:text="GO!"
                                android:textColor="#FFFFFF"></Button>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="50dp"
                            android:gravity="bottom"
                            android:src="@drawable/debit_card"></ImageView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>