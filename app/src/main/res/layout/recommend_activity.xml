<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#731DF8"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#731DF8"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="60dp"
            android:background="#731DF8"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:text="추천 상품"
                android:textColor="#FFFFFF"
                android:textSize="22.5dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:gravity="right|center">

            <Button
                android:id="@+id/config_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/setting_white"
                android:onClick="configButton"></Button>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#731DF8"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#731DF8"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#731DF8"
                android:gravity="center">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_radius"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="30dp"
                        android:text="나에게 맞는 금융상품"
                        android:textColor="@android:color/black"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#F1F1EF"
                        android:gravity="center|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/recommend_act"
                            android:layout_width="391dp"
                            android:layout_height="177dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shadow"
                            android:gravity="center|center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="190dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="170dp"
                                    android:layout_height="110dp"
                                    android:backgroundTint="#FFFFFF"
                                    android:src="@drawable/kakao" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView26"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="카카오뱅크\n캐시백 프로모션 시즌 7"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textView27"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="추천대상 : 20~25세\n월 소득 100~200만원"
                                    android:textColor="#706F6F" />

                                <Button
                                    android:id="@+id/recommend_accept"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:onClick="mOnClose"
                                    android:text="More"
                                    android:textColor="#731DF8"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#F1F1EF"
                        android:gravity="center|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/recommend_act1"
                            android:layout_width="391dp"
                            android:layout_height="177dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shadow"
                            android:gravity="center|center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="190dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="170dp"
                                    android:layout_height="125dp"
                                    android:backgroundTint="#FFFFFF"
                                    android:src="@drawable/shinhan" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView28"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="신한카드\nDeep Dream 이벤트"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textView29"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="추천대상 : 20~25세\n월 평균 150만원 이하"
                                    android:textColor="#706F6F" />

                                <Button
                                    android:id="@+id/recommend_accept1"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:onClick="mOnClose"
                                    android:text="More"
                                    android:textColor="#731DF8"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#F1F1EF"
                        android:gravity="center|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/recommend_act2"
                            android:layout_width="391dp"
                            android:layout_height="177dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shadow"
                            android:gravity="center|center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="190dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="170dp"
                                    android:layout_height="125dp"
                                    android:backgroundTint="#FFFFFF"
                                    android:src="@drawable/toss" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView30"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Toss\n대출 찾기 서비스"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textView31"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="추천대상 : 전 연령\n"
                                    android:textColor="#706F6F" />

                                <Button
                                    android:id="@+id/recommend_accept2"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:onClick="mOnClose"
                                    android:text="More"
                                    android:textColor="#731DF8"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#F1F1EF"
                        android:gravity="center|center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/recommend_act3"
                            android:layout_width="391dp"
                            android:layout_height="177dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shadow"
                            android:gravity="center|center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="190dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="170dp"
                                    android:layout_height="125dp"
                                    android:backgroundTint="#FFFFFF"
                                    android:src="@drawable/kbbank" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView32"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="KB 국민은행\n통장 개설 시 축하금 지급"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textView33"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="추천대상 : 20~25세\n국민은행 계좌가 없는 분"
                                    android:textColor="#706F6F" />

                                <Button
                                    android:id="@+id/recommend_accept3"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="15dp"
                                    android:background="@drawable/border"
                                    android:onClick="mOnClose"
                                    android:text="More"
                                    android:textColor="#731DF8"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>