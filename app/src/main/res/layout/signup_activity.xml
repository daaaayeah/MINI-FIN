<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:gravity="center"
                android:text="회원가입 페이지입니다">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="424dp"
                android:background="#D5D5D5"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="440dp">

                    <TableRow
                        android:layout_width="305dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="308dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="25dp"
                                android:gravity="right"
                                android:text="이름"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="25dp"
                                android:gravity="right"
                                android:inputType="textEmailAddress"
                                android:text="이메일"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="25dp"
                                android:gravity="right"
                                android:text="비밀번호 (6자 이상)"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="25dp"
                                android:gravity="right"
                                android:text="비밀번호 확인"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="25dp"
                                android:gravity="right"
                                android:text="휴대폰"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/signup_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/signup_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textEmailAddress" />

                            <EditText
                                android:id="@+id/signup_pw2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPassword" />

                            <EditText
                                android:id="@+id/signup_pw"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPassword" />

                            <EditText
                                android:id="@+id/signup_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:inputType="phone" />
                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="[개인정보 수집·이용 동의]"
                        android:textColor="#2E30DA" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="320dp"
                        android:padding="10dp"
                        android:text=" ① 개인정보의 수집·이용목적
예시) 포인트 적립, 입시상담, 급여관리, ...\n ② 수집하려는 개인정보의 항목
예시) 성명, 번화번호, 주소, 이메일, 학년, ...\n ③ 개인정보의 보유 및 이용기간(근거법률)
예시)1년, 수강기간, 퇴사후 3년, ...\n 거래기록 5년(전자상거래 등에서의 소비자 보호에 관한 법률)\n
④동의를 거부할 수 있으며, 예시)동의 거부시 ○○서비스가 제공되지 않습니다.\n
※ 위 개인정보 수집이용에 동의하십니까?\n
\n"
                        android:textColorHighlight="#FFFFFF"
                        android:textColorLink="#FFFFFF"></EditText>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아니오" />
                </LinearLayout>

                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="551dp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="[개인정보 제3자 제공에 대한 별도 동의]"
                        android:textColor="#2E30DA" />

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:padding="10dp"
                        android:text="① 개인정보를 제공받는 자 :
예시) oo본사\n② 개인정보를 제공받는 자의 개인정보 이용
목적 : 예시)고객 관리 및 포인트 관리\n③ 제공하는 개인정보의 항목 : 예시)성명, 전
화번호, 생년월일\n④ 개인정보를 제공받는 자의 개인정보 보유 및
이용 기간 : 예시)제공 후 1년\n⑤ 동의를 거부할 수 있으며, 예시) 동의
거부시 ○○ 서비스가 제공되지 않습니다.\n
※ 위 고유식별정보 수집이용에 동의하십니까?\n
\n"
                        android:textColorHighlight="#FFFFFF"
                        android:textColorLink="#FFFFFF"></EditText>


                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아니오" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/signup_send"
                        android:layout_width="346dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#BFBFBF"
                        android:text="보내기" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</RelativeLayout>